<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_bg1"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/list_divide"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="105dp"
        android:paddingBottom="8dp"
        android:paddingLeft="13.33dp"
        android:paddingRight="13.33dp"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/header_img"
            android:layout_width="63dp"
            android:layout_height="87dp"
            android:layout_centerVertical="true"
            android:background="@drawable/main_book_bg"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/sinabook" />

        <com.sina.book.ui.widget.SwitchButton
            android:id="@+id/remind_switch"
            android:layout_alignParentRight="true"
            android:focusable="false"
            android:clickable="false"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="1dp"
            android:layout_toLeftOf="@id/remind_switch"
            android:layout_toRightOf="@id/header_img"
            android:singleLine="true"
            android:textColor="#37312E"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/text_pl"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/title"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/remind_switch"
            android:layout_toRightOf="@id/header_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:singleLine="true"
                android:textColor="#A1A1A1"
                android:textSize="13.33sp" />

            <TextView
                android:id="@+id/chapter_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:gravity="left"
                android:singleLine="true"
                android:textColor="#A1A1A1"
                android:textSize="13.33sp" />

            <TextView
                android:id="@+id/update_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:contentDescription="@null"
                android:singleLine="true"
                android:textColor="#A1A1A1"
                android:textSize="13.33sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>