<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="47dp"
    android:background="@drawable/search_bar"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_vertical"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp" >

    <Button
        android:id="@+id/btn_search"
        android:layout_width="44dp"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/search_btn_selector" />

    <EditText
        android:id="@+id/et_key"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginRight="2.67dp"
        android:layout_toLeftOf="@id/btn_search"
        android:background="@drawable/search_input"
        android:focusable="true"
        android:gravity="center_vertical"
        android:hint="@string/search_hint"
        android:imeOptions="actionSearch"
        android:paddingLeft="10.67dp"
        android:singleLine="true"
        android:textColor="@color/feed_back_input"
        android:textColorHint="#a1a9ba"
        android:textCursorDrawable="@null"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/btn_clear_search"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignRight="@id/et_key"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_smallest"
        android:background="@null"
        android:contentDescription="@null"
        android:padding="3dp"
        android:src="@drawable/delete"
        android:visibility="gone" />

</RelativeLayout>