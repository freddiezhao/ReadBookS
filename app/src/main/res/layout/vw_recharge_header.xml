<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/PublicCardBg"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:text="@string/recharge_weibi_tip"
        android:textColor="@color/recharge_note_font_color"
        android:textSize="13.33sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:background="@drawable/top"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/card_padding_horizontal"
            android:text="@string/recharge_amount_title"
            android:textColor="@color/recharge_item_top_font_color"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:text="@string/recharge_amount_tip"
            android:textColor="@color/recharge_item_top_font_color"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>