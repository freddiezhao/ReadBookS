<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:background="@drawable/list_item_bg1"
    android:paddingBottom="8dp"
    android:paddingLeft="10.67dp"
    android:paddingRight="13.33dp"
    android:paddingTop="8dp" xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/header_img"
        android:layout_width="63dp"
        android:layout_height="87dp"
        android:layout_centerVertical="true"
        android:background="@drawable/main_book_bg"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/sinabook" />

    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@id/header_img"
        android:layout_alignLeft="@id/header_img"
        android:layout_marginBottom="7.5dp"
        android:layout_marginLeft="3.5dp"
        android:background="@drawable/number_1"
        android:gravity="center"
        android:text="@string/search_one"
        android:textColor="@color/white" />

    <LinearLayout
        android:id="@+id/cost_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dp"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables" >

        <TextView
            android:id="@+id/cost_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:textColor="#A1A1A1"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/flag_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="17dp"
            android:contentDescription="@null"
            android:src="@drawable/right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/text_pl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_toLeftOf="@id/cost_layout"
        android:layout_toRightOf="@id/header_img"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#37312E"
            android:textSize="14.67sp" />

        <TextView
            android:id="@+id/author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:gravity="left"
            android:singleLine="true"
            android:textColor="#A1A1A1"
            android:textSize="13.33sp" />

        <TextView
            android:id="@+id/chapter_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="left"
            android:singleLine="true"
            android:textColor="#A1A1A1"
            android:textSize="13.33sp" />

        <TextView
            android:id="@+id/tag_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="left"
            android:singleLine="true"
            android:textColor="#A1A1A1"
            android:textSize="13.33sp" />
    </LinearLayout>

</RelativeLayout>