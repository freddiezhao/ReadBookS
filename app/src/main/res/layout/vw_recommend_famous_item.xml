<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="53.33dp"
    android:background="@drawable/list_item_bg1"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/famous_list_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingTop="9dp"
        android:paddingBottom="9dp">

        <ImageView
            android:id="@+id/famous_head_img"
            android:layout_width="34.67dp"
            android:layout_height="34.67dp"
            android:background="@drawable/user_icon"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/famous_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/famous_head_img"
            android:layout_marginLeft="13dp"
            android:singleLine="true"
            android:textColor="@color/praise_num_color"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/famous_name"
            android:singleLine="true"
            android:text="@string/recommend_famous_des"
            android:textColor="#393939"
            android:textSize="15sp" />

        <com.sina.book.ui.widget.EllipsizeTextView
            android:id="@+id/famous_books"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_below="@id/famous_name"
            android:layout_toRightOf="@id/famous_head_img"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#8E8D8D"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>