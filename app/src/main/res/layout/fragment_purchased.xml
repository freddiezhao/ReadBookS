<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/PublicBg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <include
        android:id="@+id/book_home_login_weibo_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/login_banner_height"
        android:layout_marginTop="13.33dp"
        android:layout_centerHorizontal="true"
        layout="@layout/vw_login_weibo_tip"
        android:visibility="gone" />

    <com.sina.book.ui.widget.XListView
        android:id="@+id/book_home_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:fadingEdge="none"
        android:scrollbars="none"
        android:focusable="true"
        android:listSelector="@drawable/book_home_item_bg_nochange" />

    <include
        android:id="@+id/to_bookstore"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        layout="@layout/vw_to_bookstore"
        android:visibility="gone" />

    <include
        android:id="@+id/book_home_progress"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        layout="@layout/vw_generic_progress_view"
        android:visibility="gone" />

    <include
        android:id="@+id/error_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        layout="@layout/vw_error"
        android:visibility="gone" />

</RelativeLayout>