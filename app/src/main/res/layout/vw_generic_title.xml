<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lyTitleBar"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/defauleTitleHeight"
        android:background="@drawable/shelves_bar_bg" >

        <FrameLayout
            android:id="@+id/fl_title_right"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" >
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_title_left"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">
        </FrameLayout>
        
        <FrameLayout
            android:id="@+id/fl_title_near_right"
            android:layout_width="@dimen/defauleTitleHeight"
            android:layout_height="fill_parent"
            android:layout_toLeftOf="@id/fl_title_right"
            android:layout_centerVertical="true" >
        </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_title_middle"
            android:layout_width="@dimen/defauleTitleMidWidth"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true" >
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>