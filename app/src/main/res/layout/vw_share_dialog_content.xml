<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="234.67dp"
    android:layout_height="120.67dp"
    android:paddingBottom="21.33dp"
    android:paddingLeft="33.33dp"
    android:paddingRight="33.33dp"
    android:paddingTop="21.33dp">

    <TextView
        android:id="@+id/share_to_weibo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:drawablePadding="8dp"
        android:drawableTop="@drawable/share_to_weibo"
        android:gravity="center"
        android:text="@string/share_to_weibo"
        android:textColor="#606060"
        android:textSize="13.33sp" />

    <TextView
        android:id="@+id/share_to_others"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:drawablePadding="8dp"
        android:drawableTop="@drawable/share_to_other"
        android:gravity="center"
        android:text="@string/share_to_others"
        android:textColor="#606060"
        android:textSize="13.33sp" />
</RelativeLayout>
