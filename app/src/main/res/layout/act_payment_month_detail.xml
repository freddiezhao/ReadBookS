<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/PublicCardBg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false" >

    <ListView
        android:id="@+id/payment_month_detail_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:dividerHeight="8dp"
        android:fadingEdge="none"
        android:focusable="true"
        android:listSelector="@drawable/book_home_item_bg_nochange"
        android:paddingBottom="8dp"
        android:paddingLeft="13.33dp"
        android:paddingRight="13.33dp"
        android:scrollbars="none" />

    <include
        android:id="@+id/payment_month_detail_progress"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        layout="@layout/vw_generic_progress_view"
        android:visibility="gone" />

    <include
        android:id="@+id/error_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        layout="@layout/vw_error"
        android:visibility="gone" />

</RelativeLayout>