<?xml version="1.0" encoding="utf-8"?>
<com.sina.book.ui.widget.IgnorePressedLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingBottom="5.33dp">

    <RelativeLayout
        android:id="@+id/square_item_layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="16dp"
        android:layout_weight="1"
        android:gravity="left">

        <RelativeLayout
            android:id="@+id/square_item_book_layout1"
            android:layout_width="@dimen/book_big_common_item_img_width"
            android:layout_height="@dimen/book_big_common_item_img_height"
            android:paddingBottom="@dimen/book_item_paddingBottom"
            android:paddingLeft="@dimen/book_item_paddingLeft"
            android:paddingRight="@dimen/book_item_paddingRight"
            android:background="@drawable/main_book_bg">

            <ImageView
                android:id="@+id/square_item_book_image1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:contentDescription="@null"
                android:scaleType="fitXY"
                android:src="@drawable/sinabook" />

            <ImageView
                android:id="@+id/square_item_book_image1_shadow"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/main_book_click"
                android:contentDescription="@null"
                android:scaleType="fitXY" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/square_item_book_praise_layout1"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/square_item_book_layout1"
            android:paddingLeft="@dimen/book_item_paddingLeft"
            android:paddingRight="@dimen/book_item_paddingRight"
            android:baselineAligned="false"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/square_item_book_praise_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/praise_blue_label_normal"
                android:drawablePadding="5.3dp"
                android:gravity="center_vertical"
                android:textColor="#42A1EA"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/square_item_book_price_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/price_label_normal"
                android:drawablePadding="5.3dp"
                android:textColor="#E39040"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/square_item_book_free_image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:src="@drawable/free_label_normal"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/square_item_book_serialize_image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:src="@drawable/serialize_label_normal"
                android:visibility="invisible" />
        </RelativeLayout>

        <TextView
            android:id="@+id/square_book_title_text1"
            android:layout_width="@dimen/book_big_common_item_img_width"
            android:layout_height="wrap_content"
            android:layout_below="@id/square_item_book_praise_layout1"
            android:layout_marginTop="5dp"
            android:paddingLeft="@dimen/book_item_paddingLeft"
            android:paddingRight="@dimen/book_item_paddingRight"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#37312E"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/square_book_author_text1"
            android:layout_width="@dimen/book_big_common_item_img_width"
            android:layout_height="wrap_content"
            android:layout_below="@id/square_book_title_text1"
            android:paddingLeft="@dimen/book_item_paddingLeft"
            android:paddingRight="@dimen/book_item_paddingRight"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#A1A1A1"
            android:textSize="10.7sp" />
    </RelativeLayout>

