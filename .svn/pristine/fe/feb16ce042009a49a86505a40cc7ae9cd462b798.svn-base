<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/PublicBg"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp">

    <ImageView
        android:id="@+id/book_detail_related_divider"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/book_detail_related_author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_detail_related_divider"
        android:layout_marginTop="6dp"
        android:textColor="@color/book_detail_title_font_color"
        android:textSize="14.67sp" />

    <com.sina.book.ui.widget.HorizontalListView
        android:id="@+id/book_detail_related_book_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/book_detail_related_author_name"
        android:layout_marginTop="13.33dp"
        android:background="@color/public_bg"
        android:cacheColorHint="#00000000"
        android:divider="@color/public_bg"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:listSelector="@null"
        android:scrollbars="none" >
    </com.sina.book.ui.widget.HorizontalListView>

</RelativeLayout>