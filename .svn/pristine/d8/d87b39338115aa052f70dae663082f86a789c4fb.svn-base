<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topic_content_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/topic_image"
        android:layout_width="match_parent"
        android:layout_height="105.33dp"
        android:contentDescription="@null"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/topic_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18.67dp"
        android:layout_marginBottom="18.67dp"
        android:layout_marginLeft="21.33dp"
        android:layout_marginRight="21.33dp"
        android:textColor="#5F5E5E"
        android:textSize="13.33sp" />

    <LinearLayout
        android:id="@+id/topic_books"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" />

    <com.sina.book.ui.widget.LinearLayoutListView
        android:id="@+id/topic_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingBottom="10.67dp"
        android:paddingLeft="13.33dp"
        android:paddingRight="13.33dp"
        android:background="@drawable/card_whole"
        android:orientation="vertical"
        android:visibility="gone" />

</LinearLayout>