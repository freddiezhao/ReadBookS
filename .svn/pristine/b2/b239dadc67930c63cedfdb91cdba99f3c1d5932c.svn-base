<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal" >

    <LinearLayout
        android:id="@+id/text_selector_layout"
        android:layout_width="wrap_content"
        android:layout_height="37.33dp"
        android:layout_marginTop="10.67dp"
        android:background="@drawable/reading_text_selector_view_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
    </LinearLayout>

    <ImageView
        android:id="@+id/text_selector_up_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/text_selector_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10.67dp"
        android:contentDescription="@null"
        android:src="@drawable/reading_text_selector_view_up_arrow"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/text_selector_down_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/text_selector_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-8dp"
        android:contentDescription="@null"
        android:src="@drawable/reading_text_selector_view_down_arrow"
        android:visibility="gone" />

</RelativeLayout>