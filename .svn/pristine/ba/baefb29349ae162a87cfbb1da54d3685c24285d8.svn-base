<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_bg"
    android:paddingLeft="13.33dp"
    android:paddingRight="13.33dp"
    android:paddingTop="8dp" >

    <RelativeLayout
        android:id="@+id/relative_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/comments_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:textColor="#A4A4A4"
            android:textSize="13.33sp" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/comments_time"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/comments_time"
            android:singleLine="true"
            android:textColor="#A4A4A4"
            android:textSize="13.33sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/comments_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/relative_top"
        android:layout_marginTop="13.33dp"
        android:textColor="#686868"
        android:textScaleX="0.96"
        android:textSize="13.33sp" />

    <ImageView
        android:id="@+id/comments_divider"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/comments_content"
        android:layout_marginTop="8dp"
        android:contentDescription="@null"
        android:scaleType="fitXY" />

</RelativeLayout>