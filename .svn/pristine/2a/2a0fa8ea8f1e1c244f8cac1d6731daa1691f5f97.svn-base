<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="53dp"
    android:background="@drawable/list_item_bg1"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mounth_list_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/mounth_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:singleLine="true"
            android:textColor="@color/praise_num_color"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/mounth_type_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/mounth_type"
            android:layout_marginLeft="8dp"
            android:singleLine="true"
            android:textColor="#D8B18C"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/mounth_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="8dp"
            android:singleLine="true"
            android:text="@string/recommend_famous_des"
            android:textColor="#A1A1A1"
            android:textSize="13sp" />

        <com.sina.book.ui.widget.EllipsizeTextView
            android:id="@+id/mounth_books"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mounth_type"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="7dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#8E8D8D"
            android:textSize="12sp"
            android:visibility="visible" />
    </RelativeLayout>

</LinearLayout>